{
  "act - Add ASCOOS CMS Template for Installation File ": {
    "prefix": "act-block-install-file",
    "description": "Add code template for ASCOOS block install file.",
    "body": [
		" ",		
		"/**",
		" *   __ _  ___  ___ ___   ___   ___     ____ _ __ ___   ___",
		" *  / _` |/  / / __/ _ \\ / _ \\ /  /    / __/| '_ ` _ \\ /  /",
		" * | (_| |\\  \\| (_| (_) | (_) |\\  \\   | (__ | | | | | |\\  \\",
		"   \\__,_|/__/ \\___\\___/ \\___/ /__/    \\___\\|_| |_| |_|/__/",
		" * ",
		" * ",
		" ***********************************************************************************",
		" * @ASCOOS-NAME        : ASCOOS CMS 24'                                            *",
		" * @ASCOOS-VERSION     : 24.0.0                                                    *",
		" * @ASCOOS-CATEGORY    : Kernel (Frontend and Administration Side)                 *",
		" * @ASCOOS-CREATOR     : Drogidis Christos                                         *",
		" * @ASCOOS-SITE        : www.ascoos.com                                            *",
		" * @ASCOOS-LICENSE     : [Commercial] http://docs.ascoos.com/lics/ascoos/AGL.html  *",
		" * @ASCOOS-COPYRIGHT   : Copyright (c) 2007 - 2023, AlexSoft Software.             *",
		" ***********************************************************************************",
		" *",
		" * @package            : ${1:PACKAGE}",
		" * @subpackage         : ${2:SUBPACKAGE}",
		" * @source             : $TM_FILEPATH/${3:FILENAME}.php",
		" * @version            : ${4:NNNNNNNN} - \\$release: ${5:N.N} - \\$revision: ${6:N} - \\$build ${7:NNNN}",
		" * @created            : $CURRENT_YEAR-$CURRENT_MONTH-$CURRENT_DATE $CURRENT_HOUR:$CURRENT_MINUTE:$CURRENT_SECOND UTC+3",
		" * @updated            : $CURRENT_YEAR-$CURRENT_MONTH-$CURRENT_DATE $CURRENT_HOUR:$CURRENT_MINUTE:$CURRENT_SECOND UTC+3",
		" * @author             : ${8:AUTHOR NAME}",
		" * @authorSite         : ${9:AUTHOR WEBSITE}",
		" */",
		" ",
		" ",
		"defined (\"ALEXSOFT_RUN_CMS\") or die(\"Prohibition of Access.\");",
		" ",
		"global \\$objInstaller;",
		" ",
		"// Adjust the installer to work at BLOCK and give the block that will handle",
		"\\$objInstaller->setExtension('${10:EXTENSION NATURAL NAME}', INS_BLOCK);",
		" ",
    	"// We adjust the installer so that after installation, to take us or not part of the Block configuration.",
		"\\$objInstaller->afterSetParams(${11:TRUE OR FALSE});",
		" ",
    	"// If the block is not installed then run the installation.",
		"if (!\\$objInstaller->isInstalled()) {",
		"   // We create the path of the Block.",
    	"   \\$objInstaller->createPath();",
		" ",
		"   // If the installation files on the Server is successful",
    	"   if ( \\$objInstaller->extractPackage() ) {",
		"       // We export themes in internal path \"fronts\". !!!! Not Change for Blocks. !!!!",
    	"       \\$objInstaller->extractThemes('${12:PATH THEME}');",
		" ",   
    	"       // We take the position id, show called NOTHING.",
    	"       \\$block_pos = \\$objInstaller->getPosition('${13:BLOCK VIEW POSISTION NAME}');",
		" ",
    	"       // We take the sort that will apply to the position.",
    	"       \\$block_order = \\$objInstaller->getOrderPosition('${14:BLOCK VIEW POSITION NAME}');",
		" ",
    	"       // Place the Block in the database.",
    	"       \\$objInstaller->addSQL(\"INSERT INTO #__blocks VALUES(NULL, '\".\\$objInstaller->name.\"', '\".\\$objInstaller->name.\"', '0', '0', '{\\\"en\\\":\\\"${15:BLOCK NAME (English)}\\\",\\\"el\\\":\\\"${16:BLOCK NAME (Greek)}\\\"}', '', '', '', '', \".\\$block_pos.\", \".\\$block_order.\", '', '0', '0', '0', '0', '{\\\"theme\\\":\\\"default\\\"}');\");",
		" ",   
    	"       // pour the settings from the installer.",
    	"       \\$objInstaller->clear(); ",
    	"   } else {",
    	"       // else otherwise cancel the installation and pour the settings from the installer.",
    	"       \\$objInstaller->cancelInstallation();",
    	"     }",
    	"} else { // else pour the settings from the installer.",
    	"       \\$objInstaller->clear();",
    	"}",
		"${0:}"
	]
  }
}